	<!-- 获取污水零直排统计信息-->
	<select id="listWslzp" resultType="java.util.Map">
		SELECT count(*) SL,LX,GZJD FROM T_WSGZ_WRLZP GROUP BY LX,GZJD
	</select>
	
	<!-- 获取零直排详细信息 -->
	<select id="listWslzpInfo" parameterType="java.util.Map" resultType="java.util.Map">
		SELECT LX,SZJD,GZJD,XYGZJH,ZRDW,ZRR,CZKNHWT FROM T_WSGZ_WRLZP WHERE LX = #{TYPE}   
		<if test="VALUE != null and VALUE != ''">
			AND (ZRR LIKE #{VALUE} OR ZRDW LIKE #{VALUE})
		</if>
		ORDER BY CJSJ DESC
	</select>
